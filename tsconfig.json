{
  "include": [
    // 타입스크립트가 src 폴더 안에 있는 모든 파일 확인
    "src"
  ],
  "compilerOptions": {
    // 자바스크립트로 컴파일된 파일의 위치
    "outDir": "build",
    // 자바스크립트 버전 지정
    "target": "ES6",
    // 합쳐진 라이브러리의 정의 파일을 특정해주는 역할
    "lib": ["ES6", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}
